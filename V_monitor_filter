import adafruit_ads1x15.1115 as ADS
from adafruit_ads1x15.analog_in import AnalogIn
import time
import board
import busio

i2c = busio.I2C(board.SCL, board.SDA)

ads = ADS.ADS1115(i2c)
ads.gain = 1
chan = AnalogIn(ads, ADS.P0)

while True:
	print(f"Voltmeter reading: " {chan.voltage} V")
	time.sleep(1)
